---
import Layout from "../../../layouts/Layout.astro";
import { SEO } from "astro-seo";
import SliderNew from "../../../components/SliderNew.astro";
---

<SEO
  title="Charity Ads Remarketing - Techno Serve Solutions Agency 2024"
  description="A heavily optimized description full of well-researched keywords."
  openGraph={{
    basic: {
      title: "A Very Descriptive Title",
      type: "A type.",
      image:
        "https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png",
    },
  }}
  twitter={{
    creator: "@jonasmerlins1",
  }}
  extend={{
    // extending the default link tags
    link: [{ rel: "icon", href: "/assets/img/favicon.png" }],
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content:
          "https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png",
      },
      { name: "twitter:title", content: "Tinker Tailor Soldier Spy" },
      { name: "twitter:description", content: "Agent" },
    ],
  }}
/>

<Layout>
  <!-- Start Breadcrumb 
    ============================================= -->
  <div
    class="breadcrumb-area bg-gray bg-cover"
    style="background-image: url(/assets/img/shape/banner-3.jpg);"
  >
    <div class="container">
      <div class="breadcrumb-item">
        <div class="breadcrum-shape">
          <img src="/assets/img/shape/16.png" alt="Image Not Found" />
        </div>
        <div class="row">
          <div class="col-lg-8">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li>
                  <a href="/"><i class="fas fa-home"></i> Home</a>
                </li>
                <li><a href="/services">Services</a></li>
                <li class="active">Charity Ads Remarketing</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End Breadcrumb -->

  <!-- Star Services Details Area
    ============================================= -->
  <!-- Section One Start -->
  <div
    class="section-one container d-md-flex col-12 my-2 my-md-3 align-items-center"
  >
    <div class="col-12 col-md-6">
      <h1 class="fw-bold text-black display-4">
        Charity Ads Remarketing: Reconnect with Potential Donors
      </h1>
    </div>
    <div class="col-12 col-md-6 px-md-5 mx-md-5">
      <p class="text-black our-font mb-md-4 pe-2 px-md-0 mx-md-0">
        We help nonprofits with our expertise for charity ads remarketing to
        reconnect with your charity's potential donors who previously engaged
        with your website or ads. By targeting these warm leads with tailored
        messages, you, as a charity, can increase donations and awareness,
        maximizing the impact of their campaigns.
      </p>
    </div>
  </div>
  <!-- Section one End -->

  <!-- Image section Start Here -->
  <div class="container mb-5">
    <img
      src="/assets/img/service/website-development2.png"
      alt="Website Development"
      class="img-fluid"
    />
  </div>
  <!-- Image section End Here -->

  <!-- Section Two Start -->
  <div class="section-two container d-md-flex align-items-center col-12 my-5">
    <div class="col-12 col-md-7 pe-2 me-2 pe-md-5 me-md-5">
      <h2 class="fw-bold text-black display-6">
        Why Remarketing for Your Nonprofit
      </h2>
      <p class="text-black mb-md-4 pe-2 px-md-0 mx-md-0 our-font">
        Remarketing is crucial for any charity because it targets users who have
        already shown interest in your products or services. By re-engaging
        these potential customers with personalized ads, we will help you
        increase your brand recall, boost donations, and maximize the return on
        your marketing investment.
      </p>
      <div class="d-md-flex mb-4 text-start">
        <div class="col-12 col-md-7 px-md-0 px-2">
          <ul class="list-group">
            <li>
              <i class="fas fa-check list-group-content"></i>
              <span class="fw-bold"> Display remarketing </span>
            </li>
            <li>
              <i class="fas fa-check list-group-content"></i><span
                class="fw-bold"
              >
                Search Remarketing
              </span>
            </li>
            <li>
              <i class="fas fa-check list-group-content"></i>
              <span class="fw-bold"> Video Remarketing</span>
            </li>
          </ul>
        </div>
        <div class="col-12 col-md-7 px-md-0 px-2">
          <ul class="list-group">
            <li>
              <i class="fas fa-check list-group-content"></i><span
                class="fw-bold"
              >
                Social Media Remarketing
              </span>
            </li>
            <li>
              <i class="fas fa-check list-group-content"></i><span
                class="fw-bold"
              >
                Dynamic Remarketing
              </span>
            </li>
            <li>
              <i class="fas fa-check list-group-content"></i><span
                class="fw-bold"
              >
                Email Remarketing
              </span>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-5">
      <img
        src="/assets/img/service/why-choose-us.png"
        alt="Why Choose Us"
        class="img-fluid"
      />
    </div>
  </div>

  <!-- Section Two End -->

  <!-- Section Three Start -->
  <div class="section-three">
    <div class="row container h-auto py-2 py-md-5">
      <div class="container content col-12 col-md-9 mx-md-5 mt-3 mt-md-0">
        <h2 class="slider-heading our-heading fw-bold">
          We Do Remarketing Service for These Charities
        </h2>
        <p class="text-white our-font">
          We offer remarketing services for charities like Al-Wahab Foundation,
          Albaraka Trust, and SKZ Foundation. Remarketing campaigns on social
          media and Google ads help these organizations reconnect with potential
          donors, driving more engagement and increasing donations.
        </p>
      </div>

      <div class="blank col-3 d-none d-md-block"></div>
    </div>

    <div class="slider-section pb-5">
      <SliderNew />
    </div>
  </div>
  <!-- Section Three End -->

  <!-- Section Four Start -->
  <div class="section-four container d-md-flex align-items-center col-12 my-5">
    <div class="container col-12 col-md-5">
      <img
        src="/assets/img/service/mobile-first-opti.png"
        alt="Mobile First Optimization"
        class="img-fluid"
      />
    </div>
    <div class="col-12 col-md-7 px-md-5 mx-md-5 px-2 mt-4 mt-md-0">
      <h2 class="fw-bold text-black display-6">
        Techno Serve: Nonprofit Remarketing
      </h2>
      <p class="text-black our-font">
        At Techno Serve Solutions, we specialize in Charity Ads remarketing,
        helping nonprofit organizations reconnect with potential donors who have
        previously engaged with their campaigns. Our tailored remarketing
        strategies ensure that your charity's message reaches the right
        audience, encouraging them to take action and contribute to your cause.
        <br /><br />By leveraging data-driven insights, we optimize ad
        performance, increase conversion rates, and maximize the impact of your
        campaigns, all while staying within your budget. Partner with Techno
        Serve Solutions to enhance your charity's digital presence and make a
        meaningful difference.
      </p>
      <div class="d-flex justify-content-center justify-content-md-start">
        <button class="btn section-four-btn mt-4 mx-md-0"
          ><a
            href="https://technoservesolutions.com/services/digital-marketing/charity-advertising/"
            class="text-white">Charity Advertising</a
          ><i class="fas fa-arrow-right"></i></button
        >
      </div>
    </div>
  </div>
  <!-- Section Four End -->

  <!-- Section Five Start -->
  <div class="section-two container d-md-flex align-items-center col-12">
    <div class="col-12 col-md-7 me-md-5 pe-md-5">
      <h2 class="fw-bold text-black display-6">
        Our Experts For Remarketing Service for Charities
      </h2>
      <p class="text-black mb-2 pe-2 me-md-5 pe-md-5 mb-md-4 our-font">
        At Techno Serve Solutions, our team of experts is dedicated to mastering
        Charity Ads remarketing. We understand the unique needs of nonprofit
        organizations and tailor our strategies to help you reconnect with
        potential donors effectively.
      </p>
      <div class="d-flex justify-content-center justify-content-md-start">
        <button class="btn section-four-btn mt-4 mx-md-0"
          ><a
            href="https://technoservesolutions.com/contact/"
            class="text-white">Contact Us</a
          ><i class="fas fa-arrow-right"></i></button
        >
      </div>
    </div>
    <div class="col-12 col-md-5 mt-4 mt-md-0">
      <div class="profile-grid">
        <div class="profile-item">
          <img src="/assets/img/service/OurTeam/anwar.png" alt="anwar" />
        </div>
        <div class="profile-item">
          <img src="/assets/img/service/OurTeam/mubin.png" alt="mubin" />
        </div>
        <div class="profile-item">
          <img src="/assets/img/service/OurTeam/sahil.png" alt="sahil" />
        </div>
        <div class="profile-item">
          <img src="/assets/img/service/OurTeam/hussain.png" alt="hussain" />
        </div>
        <div class="profile-item">
          <img src="/assets/img/service/OurTeam/samshad.png" alt="samshad" />
        </div>
        <div class="profile-item">
          <img src="/assets/img/service/OurTeam/kaseem.png" alt="kaseem" />
        </div>
        <div class="profile-item">
          <img src="/assets/img/service/OurTeam/ayann.png" alt="ayann" />
        </div>
        <div class="profile-item">
          <img src="/assets/img/service/OurTeam/danial.png" alt="danial" />
        </div>
        <div class="profile-item">
          <img src="/assets/img/service/OurTeam/ahmed.png" alt="ahmed" />
        </div>
      </div>
    </div>
  </div>

  <!-- Section Five End -->

  <!-- Section Six Faq Section Start -->
  <div class="section-six container">
    <div class="faq-style-one service-faq mt-40">
      <h2 class="mb-30 fw-bold"><b>Frequently Asked Questions</b></h2>
      <div class="accordion mt--20" id="faqAccordion">
        <div class="accordion-item">
          <h3 class="accordion-header" id="headingOne">
            <button
              class="accordion-button"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapseOne"
              aria-expanded="true"
              aria-controls="collapseOne"
            >
              What is Charity Ads Remarketing?
            </button>
          </h3>
          <div
            id="collapseOne"
            class="accordion-collapse collapse show"
            aria-labelledby="headingOne"
            data-bs-parent="#faqAccordion"
          >
            <div class="accordion-body">
              <p class="our-font">
                Charity Ads Remarketing is a strategy used to reconnect with
                potential donors who have previously engaged with your charity's
                website or ads. By targeting these warm leads with tailored
                messages, nonprofits can increase donations and awareness,
                thereby maximizing the impact of their campaigns.
              </p>
            </div>
          </div>
        </div>
        <div class="accordion-item">
          <h3 class="accordion-header" id="headingTwo">
            <button
              class="accordion-button collapsed"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapseTwo"
              aria-expanded="false"
              aria-controls="collapseTwo"
            >
              Why is remarketing important for my nonprofit?
            </button>
          </h3>
          <div
            id="collapseTwo"
            class="accordion-collapse collapse"
            aria-labelledby="headingTwo"
            data-bs-parent="#faqAccordion"
          >
            <div class="accordion-body">
              <p class="our-font">
                Remarketing is crucial because it targets users who have already
                shown interest in your charity's services or products. By
                re-engaging these individuals with personalized ads, you can
                boost brand recall, increase donations, and achieve a higher
                return on your marketing investment.
              </p>
            </div>
          </div>
        </div>
        <div class="accordion-item">
          <h3 class="accordion-header" id="headingThree">
            <button
              class="accordion-button collapsed"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapseThree"
              aria-expanded="false"
              aria-controls="collapseThree"
            >
              Which charities has Techno Serve Solutions worked with for
              remarketing services?
            </button>
          </h3>
          <div
            id="collapseThree"
            class="accordion-collapse collapse"
            aria-labelledby="headingThree"
            data-bs-parent="#faqAccordion"
          >
            <div class="accordion-body">
              <p class="our-font">
                We have successfully provided remarketing services to charities
                like Al-Wahab Foundation, Albaraka Trust, and SKZ Foundation,
                helping them reconnect with potential donors and increase their
                engagement and donations.
              </p>
            </div>
          </div>
        </div>
        <div class="accordion-item">
          <h3 class="accordion-header" id="headingFour">
            <button
              class="accordion-button collapsed"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapseFour"
              aria-expanded="false"
              aria-controls="collapseFour"
            >
              How does Techno Serve Solutions optimize remarketing campaigns for
              nonprofits?
            </button>
          </h3>
          <div
            id="collapseFour"
            class="accordion-collapse collapse"
            aria-labelledby="headingFour"
            data-bs-parent="#faqAccordion"
          >
            <div class="accordion-body">
              <p class="our-font">
                We leverage data-driven insights to optimize ad performance,
                increase conversion rates, and maximize the impact of your
                campaigns, all while ensuring that we stay within your budget.
              </p>
            </div>
          </div>
        </div>
        <div class="accordion-item mb-5">
          <h3 class="accordion-header" id="headingFive">
            <button
              class="accordion-button collapsed"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapseFive"
              aria-expanded="false"
              aria-controls="collapseFive"
            >
              How can remarketing help increase donations for my charity?
            </button>
          </h3>
          <div
            id="collapseFive"
            class="accordion-collapse collapse"
            aria-labelledby="headingFive"
            data-bs-parent="#faqAccordion"
          >
            <div class="accordion-body">
              <p class="our-font">
                By targeting individuals who have already shown interest in your
                cause, remarketing can deliver tailored messages that encourage
                these potential donors to take action, resulting in increased
                donations and greater support for your charity.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Section Six Faq Section End -->

  <!-- Section Seven Start -->
  <div class="container d-none d-md-block">
    <div
      class="section-seven h-100 rounded-3 d-md-flex align-items-center p-5 mb-5"
    >
      <div class="content col-12 col-md-6">
        <h2 class="text-white display-6 fw-bold mt-2">
          Tell us about your project
        </h2>
        <p class="text-white">
          To find out more about our services and how we can <br /> help your business,
          please get in touch.
        </p>
      </div>
      <div class="col-12 col-md-6">
        <div class="d-md-flex email-section">
          <input
            type="email"
            placeholder="Enter your email address"
            class="form-control"
          />
          <button class="seven-btn">Submit</button>
        </div>
      </div>
    </div>
  </div>

  <!-- for mobile  -->
  <div class="container section-seven-mobile d-md-none">
    <div class="content">
      <h2 class="text-white display-6 fw-bold">Tell us about your project</h2>
      <p class="text-white">
        To find out more about our services and how we can help your business,
        please get in touch.
      </p>
      <div class="d-flex col-12 email-section-mobile mt-5">
        <input
          type="email"
          placeholder="Enter your email address"
          class="form-control"
        />
        <button>Submit</button>
      </div>
    </div>
  </div>

  <!-- Section Seven End -->

  <!-- End Services Details Area -->

  <style>
    .breadcrumb-area {
      /* margin-top: -50px; */
    }
    .breadcrumb-item {
      /* margin-top: -50px; */
    }
    .section-three {
      background-color: #282828;
    }
    .slider-heading {
      color: #5c82ff;
    }
    .swiper {
      width: 100%;
      height: 100%;
    }

    .swiper-slide {
      text-align: center;
      font-size: 18px;
      background: #fff;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      border-radius: 200px;
    }

    .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
    }

    .swiper-slide {
      width: 60%;
    }
    .swiper-slide:nth-child(2n) {
      /* width: 60%; */
    }

    .swiper-slide:nth-child(3n) {
      /* width: 40%; */
    }
    .slider-section {
      height: 80vh;
    }
    .our-heading {
      font-size: 1.75rem;
    }
    .our-font {
      font-size: 1.25rem;
    }
    @media (max-width: 768px) {
      .slider-section {
        height: 56vh;
      }
      .our-font {
        font-size: 1rem;
        color: black;
      }
      .our-heading {
        font-size: 0.9rem;
      }
    }
    .slider-section .swiper-content {
      background-color: #282828;
    }
    .section-four-btn {
      background-color: #8e66ff !important;
    }
    .section-seven {
      background-image: url("/assets/img/service/article-section.png");
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center;
    }
    .section-seven-mobile {
      width: 90%;
      height: 500px;
      background-image: url("/assets/img/service/article-section-mobile.png");
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      border-radius: 13px;
      margin-bottom: 2rem;
      padding: 100px 20px;
    }
    .email-section {
      background-image: linear-gradient(to left, rgba(0, 0, 0, 0.329), white);
      border-radius: 5px;
      padding: 5px 5px 5px 5px;
      border: white 1px solid;
    }
    .email-section-mobile {
      background-image: linear-gradient(to left, rgba(0, 0, 0, 0.329), white);
      height: 50px;
      border-radius: 10px;
      /* padding: 5px 5px 5px 5px; */
      border: white 1px solid;
    }

    .email-section input {
      background-color: transparent;
      border: none;
    }
    .email-section-mobile input {
      background-color: transparent;
      border: none;
    }
    .email-section-mobile button {
      background-color: black;
      color: white;
      border: none;
      font-size: 1rem;
      padding: 0px 20px 0px 20px;
      padding-right: 40px;
      margin: 5px;
      border-radius: 8px;
      cursor: pointer;
    }
    .email-section input:focus input:active {
      background-color: transparent;
      border: none;
    }
    .email-section input::placeholder {
      color: #4e4e4e;
      font-size: 1.3rem;
    }
    .email-section-mobile input::placeholder {
      color: #4e4e4e;
      font-size: 0.9rem;
    }
    .seven-btn {
      background-color: black;
      color: white;
      border: none;
      /* padding: 10px 20px;  */
      margin-right: 5px;
      border-radius: 5px;
      cursor: pointer;
    }
    .seven-btn:hover {
      background-color: #8e66ff !important;
    }
    .seven-btn:focus {
      background-color: #8e66ff !important;
    }
    .list-group-content {
      color: #8e66ff !important;
    }

    .profile-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 10px; /* Adjust the gap between items */
      padding: 20px; /* Optional, to add some padding around the grid */
      max-width: 900px; /* Adjust width as needed */
      margin: 0 auto; /* Center the grid horizontally */
    }

    .profile-item {
      background-color: #000;
      border-radius: 15px;
      overflow: hidden;
      border: 2px solid #000; /* To match the rounded corners and frame */
    }

    .profile-item img {
      display: block;
      width: 100%;
      height: auto;
    }
  </style>

  <script
    is:inline
    src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

  <script is:inline>
    var Swiper = new Swiper(".mySwiper", {
      slidesPerView: "auto",
      spaceBetween: 50,
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
    });
  </script>
</Layout>
